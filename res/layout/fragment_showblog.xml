<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_showblog"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_showblog_actionbar" >

        <ImageView
            android:id="@+id/back_showblog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="RobotoSlab-Regular.ttf"
            android:text="博客全文"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/sendImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_send" />
        
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_showBlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RelativeLayout_showblog"
        android:divider="@null"
        android:listSelector="#00000000"
        android:scrollbars="none" />

    <ProgressBar
        android:id="@+id/ProgressBar_showBlog"
        style="@style/customProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>