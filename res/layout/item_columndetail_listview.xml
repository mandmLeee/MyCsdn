<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp" >

    <TextView
        android:id="@+id/columndetail_blog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="RobotoSlab-Regular.ttf"
        android:text="title"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/columndetail_blog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="10"
        android:text="this is content!"
        android:textColor="#737373"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/columndetail_blog_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx" />

        <TextView
            android:id="@+id/columndetail_blog_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="xxxx"
            android:textColor="#aaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/columndetail_blog_readNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="xxxx"
            android:textColor="#aaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/columndetail_blog_commentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="xxxx"
            android:textColor="#aaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/columndetail_blog_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="xxxx"
            android:textColor="#aaa"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>